{
  "name": "@bgf/server",
  "version": "0.1.0",
  "private": true,
  "main": "./dist/index.cjs",
  "scripts": {
    "build": "esbuild src/index.ts --bundle --platform=node --format=cjs --outfile=dist/index.cjs --external:node-persist --external:@noble/bg-engine --external:bgio-postgres --external:sequelize --external:pg --external:pg-hstore --external:bcryptjs",
    "dev": "npm run build && node --watch-path=dist dist/index.cjs",
    "start": "node dist/index.cjs",
    "build:golden-ages": "node scripts/build-external-games.mjs",
    "build:external-games": "node scripts/build-external-games.mjs",
    "build:with-golden-ages": "npm run build:external-games && npm run build",
    "build:with-external-games": "npm run build:external-games && npm run build"
  },
  "dependencies": {
    "@koa/cors": "^5.0.0",
    "@noble/bg-engine": "*",
    "bgio-postgres": "^1.0.15",
    "boardgame.io": "^0.50.2",
    "bcryptjs": "^2.4.3",
    "koa": "^2.15.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/koa": "^2.15.0",
    "@types/koa__cors": "^5.0.0",
    "esbuild": "^0.25.0",
    "typescript": "^5.7.0"
  }
}
